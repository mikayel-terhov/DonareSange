

@model DonareSange.Models.Donation

@{
    ViewBag.Title = "Programare ";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h2>Programare</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.CentreId, "Centrul de donare", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CentreId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CentreId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.date, "Data", htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-10">

            @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "datefield", type = "datetime-local" } })
            @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })


        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.CentreId, "CNP", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("specific_pacient_cnp", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CentreId, "", new { @class = "text-danger" })
            <p style="font-size:80%; color:red">CNP-ul pacientului pentru care se face donatia</p>
        </div>
    </div>

    <div class="form-group" style=" visibility:collapse">
        @Html.LabelFor(model => model.DonorId, "DonorId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("DonorId", @Session["token"], htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DonorId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn btn-primary" />

        </div>
    </div>

</div>
}


<div>
    <p><a class="btn btn-primary" href="@Url.Action( "Index", "Donors")" >Back</a></p>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
