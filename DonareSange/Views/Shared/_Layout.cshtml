<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BloodBankManager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Blood Bank", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Convert.ToString(Session["type"]) == "DONOR")
            {
                <li><a class="navbar-brand" href="@Url.Action("Index", "Donors")"> E timpul s&#259 donezi! </a></li>
                <li><a class="navbar-brand" href="@Url.Action("Index", "Donations")"> Don&#259rile mele </a></li>
    }
                    @if (Convert.ToString(Session["type"]) == "ADMIN")
            {
                <li><a class="navbar-brand" href="@Url.Action("Index", "Centres")"> Centrele de donare </a></li>
                <li><a class="navbar-brand" href="@Url.Action("Index", "Clinics")"> Clinici </a></li>
                <li><a class="navbar-brand" href="@Url.Action("RegisterAdmin", "Admin")"> Management utilizatori</a></li>
    }
                    @if (Convert.ToString(Session["type"]) == "DOCTOR")
            {
                <li><a class="navbar-brand" href="@Url.Action("Index", "BloodRequests")"> Cererile mele de s&#226nge </a></li>
                <li><a class="navbar-brand" href="@Url.Action("Create", "BloodRequests")"> Cere s&#226nge !  </a></li>
                <li><a class="navbar-brand" href="@Url.Action("Index", "Donations")"> Toate don&#259rile </a></li>
    }
                    @if (Convert.ToString(Session["type"]) == "STAFF")
            {
                
                <li><a class="navbar-brand" href="@Url.Action("Index", "Staffs")"> Management centru </a></li>
    }
                    @if (Convert.ToString(Session["type"]) == "DONOR")
                    {
                        <li><a class="navbar-brand" href="@Url.Action("Index", "Donors")">Doneaza </a></li>
                        <li><a class="navbar-brand" href="@Url.Action("Index", "Donations")">My Donations </a></li>
                    }
                    @if (Convert.ToString(Session["type"]) == "ADMIN")
                    {
                        <li><a class="navbar-brand" href="@Url.Action("Index", "Centres")">Centres</a></li>
                        <li><a class="navbar-brand" href="@Url.Action("Index", "Clinics")">Clinics</a></li>
                        <li><a class="navbar-brand" href="@Url.Action("Index", "ApplicationUsers")">Users</a></li>


                    }
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer">
            <div class="row container">
                @Html.Partial("_FooterPartial")
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
