@{
    ViewBag.Title = "Home Page";
}



<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>

    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/images/1.jpg" alt="Los Angeles" style="width:100%;" height="560">
            <div class="carousel-caption">
                <h3 style="color:indianred">Hai cu donatia!!</h3>
                <p></p>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/images/4.png" alt="Chicago" style="width:100%; " height="560">
            <div class="carousel-caption">
                <h3 style="color:red">Ai prea mult sange?</h3>
                <p  style="color:red">Doneaza-l!</p>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/images/5.jpg" alt="New York" style="width:100%; " height="560">
            <div class="carousel-caption">
                <h3 style="color:red"></h3>
                <p style="color:red"></p>
            </div>
        </div>
    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>




